<view class="page">
    <view class="page__hd">
        <view class="page__title">菜单</view>
        <view class="page__desc">有点丑</view>
    </view>
    <view class="page__bd">
        <view class="weui-grids">
            <block wx:for="{{grids}}" wx:key="item">
                <navigator url="{{item.url}}" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="{{item.icon}}" />
                    <view class="weui-grid__label">{{item.text}}</view>
                </navigator>
            </block>
        </view>
    </view>
</view>